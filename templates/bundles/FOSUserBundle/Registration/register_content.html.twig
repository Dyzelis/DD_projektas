{% trans_default_domain 'FOSUserBundle' %}


<link rel="stylesheet" type="text/css" href="/css/login.css">
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'),
	'attr': {'class': 'fos_user_registration_register'}}) }}
<div class="card card-container">
	<h1 class="text-center text-white">REGISTRATION</h1>
	<div>
		{{ form_label(form.email, null, {
			'label_attr':
			{'class': 'lbl'}
		}) }}
		{{ form_widget(form.email,
			{'attr':
				{'placeholder': 'Email'}
			}) }}
	</div>
	<div>
		{{ form_label(form.username, null, {
			'label_attr':
			{'class': 'lbl'}
		}) }}
		{{ form_widget(form.username,
			{'attr':
				{'placeholder':'Username'}
			}) }}
	</div>
	<div>
		{{ form_label(form.plainPassword.first, null, {
			'label_attr':
			{'class': 'lbl'}
		}) }}
		{{ form_widget(form.plainPassword.first,
			{'attr':
				{'placeholder':'Password'}
			}) }}
	</div>
	<div>
		{{ form_label(form.plainPassword.second, null, {
			'label_attr':
			{'class': 'lbl'}
		}) }}
		{{ form_widget(form.plainPassword.second,
			{'attr':
				{'placeholder':'Password'}
			}) }}
	</div>
	<button class="btn btn-primary btn-block btn-signin" type="submit">{{ 'registration.submit'|trans }}</button>
	<a href="{{ path('fos_user_security_login') }}" class="btn">Already a member</a>
</div>
{{ form_end(form) }}
