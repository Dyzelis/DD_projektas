{% trans_default_domain 'FOSUserBundle' %}

<h1 class="text-center text-secondary">REGISTRATION</h1>
<link rel="stylesheet" type="text/css" href="/css/login.css">

<div class="loginPage text-center">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_widget(form.email,{'attr':{'placeholder':'Email'}}) }}<br>
    {{ form_widget(form.username,{'attr':{'placeholder':'Username'}}) }}
    {{ form_widget(form.plainPassword) }}
    <input class="btn btn-primary btn-lg" type="submit" value="{{ 'registration.submit'|trans }}" />
</div>
{{ form_end(form) }}
