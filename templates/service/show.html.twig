{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1 align="center">Service</h1>

    <table class="table table-striped text-center table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ service.title }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ service.available ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ service.price }}</td>
            </tr>
        </tbody>
    </table>
    <div class="container text-center">
        <a class="btn btn-primary" href="{{ path('service_edit', {'id': service.id}) }}">Edit</a>
        <a class="btn btn-secondary" href="{{ path('service_index') }}">Go back</a>
        {{ include('service/_delete_form.html.twig') }}
    </div>

{% endblock %}