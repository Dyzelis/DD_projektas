{% extends 'base.html.twig' %}

{% block title %}Visit{% endblock %}

{% block body %}
    <h1 class="text-secondary text-center">Visit</h1>

    <table class="table table-striped text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visit.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ visit.date ? visit.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container text-center">
        <a class="btn btn-primary" href="{{ path('visit_edit', {'id': visit.id}) }}">Edit</a>
        <a class="btn btn-secondary" href="{{ path('visit_index') }}">Go back</a>
        {{ include('visit/_delete_form.html.twig') }}
    </div>
{% endblock %}